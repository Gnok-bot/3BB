<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../header') %>
    <title>Weblists Page</title>
</head>
<body class="landing-page sidebar-collapse" style="padding-top: 80px;">
    <%- include('../navbar') %>
    <div class="container">
        <div class="row">
            <div class="col">
                <p>รายชื่อ Website</p>
            </div>
            <div class="col ">
                <input class="form-control mb-1 search-bar" id="userInput" type="text" placeholder="Search..">
            </div>
        </div>  
    <table class="table table-striped table-bordered table-sm" id="table">
        <thead>
            <tr>
                <!-- <th class="text-center">#</th> -->
                <th>รหัสพนักงาน</th>
                <th>ชื่อ</th>
                <th>Cluster</th>
                <th>จังหวัด</th>
                <th class="text-right">Salary</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody id="userTable">
            <% results.forEach(function(res){ %> 
            <tr>
                    <!-- <td class="text-center"><%= res.auto_id %> </td> -->
                    <td><%= res.emp_id %></td>
                    <td><%= res.firstName+' '+res.lastName %></td>
                    <td><%= res.area %></td>
                    <td><%= res.province %></td>
                    <td class="text-right">&euro; 99,225</td>
                <td class="td-actions text-right p-0 pr-1">
                    <a href="/<%= res.id%>"><button type="button" rel="tooltip" class="btn btn-info btn-sm">
                        <i class="now-ui-icons users_single-02"></i>
                    </button></a>
                    <button type="button" rel="tooltip" class="btn btn-success btn-sm">
                        <i class="now-ui-icons ui-2_settings-90"></i>
                    </button>
                    <button type="button" rel="tooltip" class="btn btn-danger btn-sm">
                        <i class="now-ui-icons ui-1_simple-remove"></i>
                    </button>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Previous</span>
            </a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Next</span>
            </a>
          </li>
        </ul>
      </nav>
</div>
</body>
<%- include('../script') %>
<script type="text/javascript">
    $(document).ready(()=>{
          var $nav = $('.fixed-top');
              $nav.removeClass('navbar-transparent')

              $("#userInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#userTable tr").filter(function() {
                  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
              });
      });

</script>
</html>