    $(document).ready(()=>{
      '<%blogs.forEach(function(blog){%>'
        $telNumber = '<%=blog.telNum%>'
      '<%})%>'
      $1 = $telNumber.substr(0,3);
      $2 = $telNumber.substr(3,3);
      $3 = $telNumber.substr(6,4);
      $text = '<p><a href="tel:'+$telNumber+'">'+$1+'-'+$2+'-'+$3+'</a></p>'
      $('#telNum').html($text);
