<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../header') %>
    <title>3BB</title> 
</head>
<body class="landing-page sidebar-collapse" style="padding-top: 10px;">
    <%- include('../navbar') %>
    <div class="wrapper">
      <div class="section rounded"">
        <div class="container"> 
          <div class="row">
            <div class="col-md-10 ml-auto col-6 mr-auto">
                <div class="row">
                <div class="col">
                  <p class="title">ข้อมูลพนักงาน</p>
                </div>
              <% if(blogs == ""){ %>
              <div class="col">
                <div class="sumbit text-right">
                  <a href="/admin/profile/add/" class="btn btn-primary py-2 mb-3">เพิ่มข้อมูล</a>
                </div>
              </div>
              <% } %>
            </div>
              <div class="main img-raised rounded">
                <div class="card-body rounded">
                  <!-- Tab panes -->
                  <div class="tab-content row">
                    <% blogs.forEach(function(blog){ %>
                    <div class="form-group py-2 col-lg-3">
                        <label for="">รหัสพนักงาน</label>
                        <p name="emp_id" class="form-control" ><%= blog.emp_id%></p>
                    </div>
                  </div>
                  <div class="tab-content row">
                    <div class="form-group py-2 col">
                        <label for="">ชื่อจริง</label>
                        <p name="firstName" class="form-control" ><%= blog.firstName%></p>
                    </div>
                    <div class="form-group py-2 col">
                        <label for="">นามสกุล</label>
                        <p name="lastName" class="form-control" ><%= blog.lastName%></p>
                    </div>
                  </div>
                  <div class="tab-content row">
                    <div class="form-group py-2 col">
                        <label for="">ชื่อบริษัท</label>
                        <input type="text" name="company" value="บริษัท ทริปเปิลที อินเทอร์เน็ต จำกัด" class="form-control" disabled>
                    </div>
                    <div class="form-group py-2 col">
                        <label for="">พื้นที่</label>
                        <p name="area" class="form-control" ><%= blog.area%></p>
                    </div>
                    <div class="form-group py-2 col">
                        <label for="">จังหวัด</label>
                        <p name="province" class="form-control" ><%= blog.province%></p>
                    </div>
                  </div>
                  <div class="tab-content row">
                    <div class="form-group py-2 col">
                        <label for="">ที่อยู่บริษัท</label>
                        <p name="address" class="form-control" ><%= blog.address%></p>
                    </div>
                  </div>
                  <div class="tab-content row">
                    <div class="form-group py-2 col">
                        <label for="">เบอร์โทร</label>
                        <p name="telNum" class="form-control" ><%= blog.telNum%></p>
                    </div>
                    <div class="form-group py-2 col">
                        <label for="">อีเมล</label>
                        <p name="email" class="form-control" ><%= blog.email%></p>
                    </div>
                    <div class="form-group py-2 col">
                        <label for="">Line URL</label>
                        <p name="line_url" class="form-control" ><%= blog.line_url%></p>
                    </div>
                    <input type="hidden" name="id">
                  </div>
                  <div class="tab-content row">
                    <div class=" py-2 col">
                    <label>Line QR Code</label>
                    <img class="d-block img-raised" src="/images/<%= blog.id %>/qrcode/<%= blog.line_qrcode %>" alt="Line QRCODE" height="150px">
                    </div>
                    <div style="margin: 140px 20px 0 0;">
                      <a href="/admin/profile/edit?:<%= blog.id %>"><button class="btn btn-primary">แก้ไข</button></a>
                    </div>
                  </div>
                  <% }) %>
                </div>
              </div>
</body>
<script src="../../assets/js/core/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
  $(document).scroll(()=>{
        var $nav = $('.fixed-top');
        var scroll = $(window).scrollTop();
        if (scroll >= 100){
            $nav.removeClass('navbar-transparent')
        }else{
            $nav.addClass('navbar-transparent')
        }
    });
</script>

</html>
