<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../header') %>
    <title>Weblists Page</title>
</head>
<body class="landing-page sidebar-collapse" style="padding-top: 80px;">
    <%- include('../navbar') %>
    <div class="container">
        <div class="row">
            <div class="col">
                <p>รายชื่อ Google Lists</p>
            </div>
            <div class="col ">
                <input class="form-control mb-1 search-bar" id="userInput" type="text" placeholder="Search..">
            </div>
        </div>  
    <table class="table table-striped table-bordered table-sm" id="table">
        <thead>
            <tr>
                <!-- <th class="text-center">#</th> -->
                <th>ชื่อพนักงาน</th>
                <th class="text-center">Google Analysis</th>
                <th class="text-center">Google Manager</th>
                <th class="text-center">Google Verification</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody id="userTable">
            <% results.forEach(function(res){ %> 
            <tr id="<%= res.id %> ">    
                    <td><%= res.firstName+' '+res.lastName %></td>
                    <% if(res.google_analytic){ %> 
                        <td class="text-center p-2"><i class="fa-solid fa-check fa-2x" style="color: rgb(0, 110, 0);"></i></td>
                    <% }else{ %>
                        <td class="text-center p-2"><i class="fa-solid fa-xmark fa-2x" style="color: rgb(192, 0, 0);"></i></td>
                    <% } %> 
                    <% if(res.google_manager){ %> 
                        <td class="text-center p-2"><i class="fa-solid fa-check fa-2x" style="color: rgb(0, 110, 0);"></i></td>
                    <% }else{ %>
                        <td class="text-center p-2"><i class="fa-solid fa-xmark fa-2x" style="color: rgb(192, 0, 0);"></i></td>
                    <% } %> 
                    <% if(res.google_verification){ %> 
                        <td class="text-center p-2"><i class="fa-solid fa-check fa-2x" style="color: rgb(0, 110, 0);"></i></td>
                    <% }else{ %>
                        <td class="text-center p-2"><i class="fa-solid fa-xmark fa-2x" style="color: rgb(192, 0, 0);"></i></td>
                    <% } %> 
                <td class="td-actions text-center p-0 pr-1">
                    <button type="button" id="view" data-target="#view" rel="tooltip" class="btn btn-success btn-sm view">
                        <i class="fa-solid fa-eye"></i> View
                    </button>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <li class="page-item">
            <% if(page > 1 ) { %> 
            <a class="page-link" href="/admin/gtag-lists/?page=<%= page-1 %>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
              <% } %> 
            </li>
            <% for(let i = iterator; i <= endingLink; i++) { %>
              <% if(i === page) { %> 
                <li class="page-item"><a class="page-link" href="/admin/gtag-lists/?page=<%= i %>"><%= i %></a></li>
              <% continue; %>
              <% } %>  
            <li class="page-item"><a class="page-link" href="/admin/gtag-lists/?page=<%= i %>"><%= i %></a></li>
            <% } %> 
            <li class="page-item">
              <% if(page < numOfPages) { %> 
              <a class="page-link" href="/admin/gtag-lists/?page=<%= page+1 %> " aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
              <% } %> 
            </li>
          </ul>
        </nav>
        <!-- Modal -->
        <% results.forEach(function(res){ %> 
        <form action="/admin/edit-tag/<%= res.id %>" method="post">
            <div id="<%= res.id %>" class="modal fade" tabindex="-1" role="dialog" aria-haspopup="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header d-flex justify-content-center"> 
                            <div>
                                <h5 class="modal-title" style="color: black;">Google Tag</h5>
                            </div>  
                        </div>
                        <div class="modal-body">
                            <p>Google Analytic</p>
                            <input type="text" name="google_analytic" id="" value="<%=  res.google_analytic %>" class="form-control"><br>
                            <p>Google Manager</p> 
                            <input type="text" name="google_manager" id="" value="<%=  res.google_manager %>" class="form-control"><br>
                            <p>Google Verfication</p>
                            <input type="text" name="google_verification" id="google_verification" value="<%=  res.google_verification %>" class="form-control">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
                            <input type="hidden" value="">
                            <div class="d-flex justify-content-center submit" id="submit">
                                <input type="submit" class="btn btn-primary" value="แก้ไข">
                            </div>
                        </div>  
                    </div>
                </div>
            </div>
        </form>
        <% }) %> 
        <!-- End Modal -->
</div>
</body>
<%- include('../script') %>
<script type="text/javascript">
    $(document).ready(()=>{
          var $nav = $('.fixed-top');
              $nav.removeClass('navbar-transparent')

              $("#userInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#userTable tr").filter(function() {
                  $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
              });
      });

    $(".view").click(function() {
        var info = $(this).parent().closest('tr')
        //console.log(info.attr('id'))
        for(var i = 1; i<=1000; i++){
            if(info.attr('id') == i){
                $('#'+i).modal("show")
            }
        }
    });

</script>
</html>