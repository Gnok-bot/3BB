<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../header') %>
    <title>3BB</title> 
</head>
<body class="landing-page sidebar-collapse" style="padding-top: 10px;">
    <%- include('../navbar') %>
    <div class="wrapper">
      <div class="section rounded"">
        <div class="container"> 
          <div class="row">
            <div class="col-md-10 ml-auto col-6 mr-auto">
              
                <div class="row">
                <div class="col">
                  <p class="title">แก้ไขข้อมูลพนักงาน</p>
                </div>
              <% if(blogs == ""){ %>
              <div class="col">
                <div class="sumbit text-right">
                  <a href="/admin/profile/add/" class="btn btn-primary py-2 mb-3">เพิ่มข้อมูล</a>
                </div>
              </div>
              <% } %>
            </div>
            <form action="/admin/profile/update" method="post" enctype="multipart/form-data">
              <div class="main img-raised rounded">
                <div class="card-body rounded">
                  <!-- Tab panes -->
                  <div class="tab-content row">
                    <% blogs.forEach(function(blog){ %>
                    <div class="form-group py-2 col-lg-3">
                        <label for="">รหัสพนักงาน</label>
                        <input name="emp_id"  class="form-control"  value="<%= blog.emp_id%>"></input>
                    </div>
                  </div>
                  <div class="tab-content row">
                    <div class="form-group py-2 col">
                        <label for="">ชื่อจริง</label>
                        <input name="firstName"  class="form-control" value="<%= blog.firstName %>"></input>
                    </div>
                    <div class="form-group py-2 col">
                        <label for="">นามสกุล</label>
                        <input name="lastName" value="<%= blog.lastName%>" class="form-control" ></input>
                    </div>
                  </div>
                  <div class="tab-content row">
                    <div class="form-group py-2 col">
                        <label for="">ชื่อบริษัท</label>
                        <input type="text" name="company" value="บริษัท ทริปเปิลที อินเทอร์เน็ต จำกัด" class="form-control" disabled>
                    </div>
                    <div class="form-group py-2 col">
                        <label for="">พื้นที่</label>
                        <input name="area" value="<%= blog.area%>" class="form-control" ></inp>
                    </div>
                    <div class="form-group py-2 col">
                        <label for="">จังหวัด</label>
                        <input name="province" value="<%= blog.province%>" class="form-control" ></inp>
                    </div>
                  </div>
                  <div class="tab-content row">
                    <div class="form-group py-2 col">
                        <label for="">ที่อยู่บริษัท</label>
                        <input name="address" value="<%= blog.address%>" class="form-control" ></input>
                    </div>
                  </div>
                  <div class="tab-content row">
                    <div class="form-group py-2 col">
                        <label for="">เบอร์โทร</label>
                        <input name="telNum" value="<%= blog.telNum%>" class="form-control" ></input>
                    </div>
                    <div class="form-group py-2 col">
                        <label for="">อีเมล</label>
                        <input name="email" value="<%= blog.email%>" class="form-control" ></input>
                    </div>
                    <div class="form-group py-2 col">
                        <label for="">Line URL</label>
                        <input name="line_url" value="<%= blog.line_url%>" class="form-control" ></input>
                    </div>
                    <input type="hidden" value="<%= blog.id %>" name="id">
                  </div>
                  <div class="tab-content row">
                    <div class=" py-2 col">
                    <label>Line QR Code</label>
                    <img class="d-block img-raised" src="/images/<%= blog.id %>/qrcode/<%= blog.line_qrcode %>" alt="Line QRCODE" height="150px">
                    <input name="line_qrcodePrev" value="<%= blog.line_qrcode%>" class="form-control" type="hidden"></input>
                    <input type="file" name="line_qrcode" accept='image/*' class="form-control-file mt-2" id="">
                    </div>
                    <div style="margin: 180px 20px 0 0;">
                      <button type="submit" class="btn btn-primary">บันทึก</button>
                    </div>
                  </div>
                  <% }) %>
                </div>
              </div>
            </form>
</body>
</html>
<script src="../../assets/js/core/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript">
  $(document).scroll(()=>{
        var $nav = $('.fixed-top');
        var scroll = $(window).scrollTop();
        if (scroll >= 100){
            $nav.removeClass('navbar-transparent')
        }else{
            $nav.addClass('navbar-transparent')
        }
    });
</script>